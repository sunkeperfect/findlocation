.download_logo {
	display: block;
	width: 150px;
}

.download_android {
	display: block;
	width: 228px;
	height: 65px;
	margin-bottom: 10px;
	overflow: hidden;
	color: #39442e;
	text-decoration: none;
	outline: none;
	font: 1em/1.375em "microsoft yahei";
	border-radius: 4px;
}
.download_android {
	background: #a5d500;
	margin-top: 0px;
	border-bottom: 5px solid #66a800;
}
.download_android:hover {
	background: #a8d800;
	margin-top: 0px;
	border-bottom: 5px solid #66a800;
}

.d_right span {
	font-size: 22px;
	display: block;
	line-height: 34px;
	margin-top: 5px;
	color: #fff;
}
.download_android .d_left {
	display:block;
	float: left;
	width: 70px;
	height: 100%;
	background: url(img/icon_andorid.png) no-repeat center;
}
